<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nishit.dell.phonedetail.MainActivity">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ff9933">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Phone Information"
                android:textAppearance="?android:textAppearanceLarge" />

            <Button
                android:id="@+id/btnlang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_below="@id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:text="Language"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnmomk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_below="@id/btnlang"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:background="#a7c942"
                android:text="Model and Make" />

            <Button
                android:id="@+id/btnandver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnmomk"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#ffff00"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Android Version" />

            <Button
                android:id="@+id/btnimei"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnandver"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="#0a8aaa"
                android:text="IMEI"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnnetcar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnimei"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:background="#ff3300"
                android:text="Network and Carrier"
                android:textColor="#ffffff"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btndispreso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnnetcar"
                android:layout_marginTop="18dp"
                android:background="#993333"
                android:padding="20dp"
                android:text="Display Resolution"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnintcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btndispreso"
                android:layout_marginBottom="31dp"
                android:layout_marginTop="10dp"
                android:text="Internet Connection"
                android:textColor="#3399ff" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
